{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["scaffoldVersion", "name", "displayName", "description", "args", "motd"],
  "properties": {
    "scaffoldVersion": {
      "type": "number"
    },
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "args": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "default"],
        "properties": {
          "name": {
            "type": "string"
          },
          "replaceFrom": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": {
            "type": "string"
          },
          "isProjectName": {
            "type": "boolean"
          }
        }
      }
    },
    "renames": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      }
    },
    "motd": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["regular", "title", "command", "hint"]
          },
          "text": {
            "type": "string"
          }
        }
      }
    }
  }
}
